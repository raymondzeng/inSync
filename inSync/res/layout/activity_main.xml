<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/connectedBTdevTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/createSessionButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="createSession"
            android:text="@string/createSession"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/findSessionButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/findsession"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/helpButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="helpScreen"
            android:text="@string/help"
            android:textColor="@color/green" />
    </LinearLayout>

</ScrollView>